<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.domi.udonsari.mapper.SwipeMapper">

    <!-- 매칭 유저 조회 -->
    <select id="selectSwipeUser" parameterType="kr.domi.udonsari.vo.swipeVO" resultType="kr.domi.udonsari.vo.swipeVO">
        select * from USER;
    </select>

    <!-- 매칭 판별 -->
    <insert id="insertSwipeUser">
        insert into
        SARI_MATCHING(
        user1_idx,
        user2_idx,
        matching_user1_state,
        matching_user2_state)
        values(
        #{user1_idx},
        #{user2_idx},
        #{matching_user1_state},
        #{matching_user2_state}
        )
    </insert>

</mapper>